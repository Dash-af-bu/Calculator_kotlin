<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview1"
        android:textAlignment="textEnd"
        android:paddingRight="10dp"
        android:paddingTop="40dp"
        android:background="@drawable/textfield"
        android:textSize="25sp"
        android:textColor="#FFFFFF">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview2"
        android:textAlignment="textEnd"
        android:paddingRight="10dp"
        android:paddingTop="40dp"
        android:textSize="25dp"
        android:background="@drawable/textfield"
        android:layout_below="@+id/textview1"
        android:textColor="#FFFFFF">

    </TextView>
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:rowCount="4"
    android:columnCount="5">
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="9"
        android:layout_marginTop="2dp"
        android:textSize="25sp"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:layout_below="@+id/buttonClear"
        android:id="@+id/button9">

    </Button>
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="8"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonClear"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/buttonBackspace"
        android:id="@+id/button8">

    </Button>
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="7"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonBackspace"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/buttonPercent"
        android:id="@+id/button7">

    </Button>
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="AC"
        android:background="@drawable/button"
        android:textSize="25sp"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/textview2"
        android:id="@+id/buttonClear">

    </Button>
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="âŒ«"
        android:textSize="25sp"
        android:textColor="@color/colorAccent"
        android:background="@drawable/button"
        android:layout_toRightOf="@+id/buttonClear"
        android:drawableTint="#FF03DAC5"
        android:layout_below="@+id/textview2"
        android:id="@+id/buttonBackspace">

    </Button>



    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="6"
        android:textSize="25sp"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:layout_below="@+id/button9"
        android:id="@+id/button6">

    </Button>
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="5"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonClear"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:layout_below="@+id/button8"
        android:id="@+id/button5">

    </Button>
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="4"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonBackspace"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:layout_below="@+id/button7"
        android:id="@+id/button4">

    </Button>
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="*"
        android:textSize="25sp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/buttonPercent"
        android:background="@drawable/button"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/buttonDivide"
        android:id="@+id/buttonMultiply">

    </Button>
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="/"
        android:layout_marginLeft="2dp"
        android:textSize="25sp"
        android:background="@drawable/button"
        android:layout_toRightOf="@+id/buttonPercent"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/textview2"
        android:id="@+id/buttonDivide">

    </Button>






    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="3"
        android:textSize="25sp"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:layout_below="@+id/button6"
        android:id="@+id/button3">

    </Button>
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="2"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonClear"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:layout_below="@+id/button5"
        android:id="@+id/button2">

    </Button>
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="1"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonBackspace"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:layout_below="@+id/button4"
        android:id="@+id/button1">

    </Button>
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="+"
        android:textSize="25sp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/buttonPercent"
        android:background="@drawable/button"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/buttonSubtract"
        android:id="@+id/buttonPlus">

    </Button>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="-"
        android:textSize="25sp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/buttonPercent"
        android:background="@drawable/button"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/buttonMultiply"
        android:id="@+id/buttonSubtract">

    </Button>
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="."
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonClear"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:layout_below="@+id/button2"
        android:id="@+id/buttonDot">

    </Button>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="0"
        android:textSize="25sp"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:layout_below="@+id/button1"
        android:id="@+id/button0">

    </Button>
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="%"
        android:textSize="25sp"
        android:background="@drawable/button"
        android:layout_toRightOf="@+id/buttonBackspace"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/textview2"
        android:id="@+id/buttonPercent">

    </Button>

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="2"
        android:layout_below="@+id/button3"
        android:layout_toRightOf="@+id/buttonBackspace"
        android:background="@drawable/button"
        android:text="="
        android:textColor="#FF9800"
        android:textSize="35sp">

    </Button>



</GridLayout>
</LinearLayout>
